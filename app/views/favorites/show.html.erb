<h1 class="center pad-25-top pad-25-bottom">
  <%= @business.name %>
</h1>
<hr>
<div class="container pad-100-top">
  <div class="biz-info">
    <p class="pad-25-bottom">
      <%= link_to "See #{@business.name} on Yelp" , @business.url %>
    </p>
    <p class="pad-25-bottom">
      <%= image_tag "address" , {size: "50" } %>
        <%= @business.location %>
    </p>
    <p class="pad-25-bottom">
      <%= image_tag "mobile-phone" , {size: "50" } %>
        <%= @business.phone %>
    </p>
    <div class="pad-50-top txt-show">
      <%= link_to image_tag("delete", class: "delete-img-show" ), "/#{current_user.id}/favorites/#{@business.id}" , method: :delete %>Delete from favorites
    </div>
  </div>
</div>